<script>
  import { props, signal } from '@dec0de-io/temple';
  const { start } = props();
  const count = signal<number>(start);
  console.log('count', count, count.value)
  setTimeout(() => count.value++, 3000);
</script>

<if true={count.value > 2}>
  <div>
    Reactive Counter: <strong>{count.value}</strong>
  </div>
</if>